{
  "compilerOptions": {
    "target": "ES6",                    // Specify ECMAScript target version (e.g., ES5, ES6/ES2015, ESNext)
    "module": "commonjs",               // Specify module code generation (e.g., commonjs, esnext)
    "strict": true,                     // Enable all strict type-checking options
    "esModuleInterop": true,            // Enable esModuleInterop for better compatibility with CommonJS modules
    "skipLibCheck": true,               // Skip type checking of declaration files
    "outDir": "./dist",                 // Redirect output structure to the directory
    "rootDir": "./src",                 // Specify the root directory of input files
    "resolveJsonModule": true,          // Include modules imported with .json extension
    "noImplicitAny": true,              // Raise error on expressions and declarations with an implied "any" type
    "sourceMap": true,                  // Generates corresponding .map file for debugging
    "declaration": true,                // Generates corresponding .d.ts file
    "lib": ["es6", "dom"],              // Specify library files to include in the compilation
  },
  "include": ["src/**/*"],              // Include files in the project
  "exclude": ["node_modules", "dist"]   // Exclude files from the project
}
